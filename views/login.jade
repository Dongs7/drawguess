extends layout

block content
  - if(user.guest){
    div(id='loginbox', class='container')
      form(action=prefix+'/login', method='post', id='login_form')
        div
          label Username:
          input(type='text', name='username')
          div(class='valimsg', id='namemsg')
        div
          label Password:
          input(type='password', name='password')
          div(class='valimsg', id='pwdmsg')
        div
          button(type='submit', class='btn btn-primary') Log in
          button(onclick="location.href='"+prefix+"/signup';" type='button', class='btn btn-primary') Sign Up
  - }
  - else{
    div(id='confirmbox', class='container')
      div #{user}, Do you want to log out first ?
      a(href=prefix+'/logout')
      button(onclick="location.href='"+prefix+"/logout';" class='btn btn-warning', type='button') Log out
  - }