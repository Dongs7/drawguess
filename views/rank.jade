extends layout

block append link
    link(rel='stylesheet', href=prefix + '/stylesheets/audio.css')
    title Leaderboard
    script(src='http://code.jquery.com/jquery-1.11.1.js')
    script(src=prefix + '/javascripts/test.js')

block content
    // Navigation
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#', style="font-family:'Nunito'") HOME
      // /.container
    .container
      // Introduction Row
      .row
        .col-lg-12
          h1.page-header
            | Guess Sketch
            small Ranking
          p
            | The Ranking upgrade every day after midnight. Enjoy our game and be a top player. Goodluck
      // Ranking Row
      .row
        .col-lg-12
          h2.page-header Leaderboard
        .col-lg-4.col-sm-6.text-center
          img.img-circle.img-responsive.img-center(src='/images/2nd.jpg', width='200', height='200', style='PADDING-BOTTOM: 70px;')
          h3= users[1].nickname
   
            small= users[1].point
          p You are truly insane
        .col-lg-4.col-sm-6.text-center
          img.img-circle.img-responsive.img-center(src='/images/1st.jpg', width='200', height='200')
          h3= users[0].nickname
            small= users[0].point
          p You are almost top player. Cheer up!!!!
        .col-lg-4.col-sm-6.text-center
          img.img-circle.img-responsive.img-center(src='/images/3rd.png', width='200', height='200', style='PADDING-BOTTOM: 55px;')
          h3= users[2].nickname
            small= users[2].point
          p You are not a bad player
      .bootstrap-demo
        style.
          .bootstrap-demo{margin:30px;}
        table.table.table-condensed
          thead
            tr
              th Rank
              th Player
              th Score
          tbody
            tr.success
              td 4
              td= users[3].nickname
              td= users[3].point
            tr.danger
              td 5
              td= users[4].nickname
              td= users[4].point
            tr.warning
              td 6
              td= users[5].nickname
              td= users[5].point
            tr.info
              td 7
              td= users[6].nickname
              td= users[6].point
            tr.active
              td 8
              td= users[7].nickname
              td= users[7].point