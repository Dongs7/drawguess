extends layout

block append link
  link(rel='stylesheet', href=prefix+'/stylesheets/audio.css')
  script(src='https://cdn.socket.io/socket.io-1.3.5.js')
  script(src='http://code.jquery.com/jquery-1.11.1.js')
  script(src=prefix+'/javascripts/test.js')

block content
  div(id='infobox')
    div(id='room')=room
  
  h2 there's 
    span(id='count') 0 
    span in this room
   
  audio(class='playsong' id='bgplayer' preload='auto')
   source(src='/bgmusic/tr1.mp3')
   
  a(id='prevControl' href='#')
    img(src='/images/prev.png' id='prev')
         
  a(id='playerControl' href='#')
    img(src='/images/on1.png' id='play' )
    img(src='/images/off2.png' id='pause')

  a(id='nextControl' href='#')
    img(src='/images/next.png' id='next')
    
  h2 game status:
    span(id='status')
  
  h2 the answer is:
    span(id='answer')
    
  h2 Timer:
    span(id='timer')
    
  
  ul(id='list')
    li default things
    
  form(action='')
    input(class='msg', id='msg')
    button(type='submit') Enter
    
  //button(id='joingame') Join game
    
